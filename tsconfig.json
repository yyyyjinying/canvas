{
  "compilerOptions": {
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@common/*": ["src/common/*"]
    },
    "module": "esnext",
    "target": "es6",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "allowJs": true, // 模块导入js文件
    "resolveJsonModule": true, // 模块导入json
    "moduleResolution": "node", // 模块解析查找路径的规则
    "experimentalDecorators": true, // 允许使用装饰器
    "rootDir": ".",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true, // 允许引入没有默认导出的模块
    "noUnusedLocals": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "public", "build", "dist", "scripts", "webpack", "jest"]
}
